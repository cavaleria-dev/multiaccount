server {
    listen 443 ssl http2;
    server_name app.cavaleria.ru;
    root /var/www/app.cavaleria.ru/public;

    index index.php index.html;

    # SSL
    ssl_certificate /etc/letsencrypt/live/app.cavaleria.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.cavaleria.ru/privkey.pem;

    # Логи
    access_log /var/log/nginx/app.cavaleria.ru-access.log;
    error_log /var/log/nginx/app.cavaleria.ru-error.log;

    # Увеличение размера загрузки файлов
    client_max_body_size 100M;

    # Разрешение iframe для доменов *.moysklad.ru
    add_header Content-Security-Policy "frame-ancestors *.moysklad.ru" always;

    # ВАЖНО: CORS заголовки убраны из nginx, они обрабатываются в Laravel CorsMiddleware
    # Это предотвращает дублирование заголовков и конфликты

    # API обработка - КРИТИЧНО для корректной работы JSON API
    # Без этого блока Nginx отдаст HTML SPA страницу вместо JSON для API endpoints
    location /api {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Основной location для SPA
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP обработка
    location ~ \.php$ {
        fastcgi_pass unix:/run/php-fpm/www.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        fastcgi_hide_header X-Powered-By;

        # КРИТИЧНО: Передача custom заголовков для Laravel middleware
        # Без этого middleware MoySkladContext не получит заголовок X-MoySklad-Context-Key
        fastcgi_param HTTP_X_MOYSKLAD_CONTEXT_KEY $http_x_moysklad_context_key;
    }

    # Запрет доступа к скрытым файлам
    location ~ /\.(?!well-known).* {
        deny all;
    }

    # Статические файлы с CORS заголовками для iframe
    location ~* \.(jpg|jpeg|gif|png|css|js|ico|xml|svg|woff|woff2|ttf)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";

        # CORS для статических файлов (для загрузки в iframe МойСклад)
        add_header Access-Control-Allow-Origin "https://online.moysklad.ru" always;
        add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Origin, Content-Type, Accept" always;

        # Обработка preflight запросов
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "https://online.moysklad.ru";
            add_header Access-Control-Allow-Methods "GET, OPTIONS";
            add_header Access-Control-Allow-Headers "Origin, Content-Type, Accept";
            add_header Access-Control-Max-Age 86400;
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }
    }
}
